/*@import 引用图标css */
@import "/common/css/icon.wxss";
.main{width:100%;height: 100%; background-color: #efeff4;}
.user_center_bg{
  background-image: url(https://s2.ax1x.com/2019/07/01/Z81YUx.th.png);
  max-width: 100%;
  height: 240px;
  background-size: cover;
  text-align: center; display:flex; justify-content:center; align-items:center;}	
.user_center_bg .login_link{display: block;color: white;font-weight: 500;}
.tx_img{width: 80px; height: 90px;}
.list_view{padding: 11px 15px;display: -webkit-box;  -webkit-box-align: center; 
  border-bottom: 1px solid #c8c7cc; background-color: #fff;}
.list_view .left_img,.list_view .list_text,.list_view .icon-youjiantou{display: -webkit-box;-webkit-box-align: center;}
.left_img{width: 20px; height:20px; margin-right: 20rpx;}
.list_text{ display: inline-block;font-size: 0.9rem; -webkit-box-flex: 1;-webkit-flex: 1;flex: 1;}
.icon-youjiantou{color: #3b9e82;}

.btn{margin: 10px 0; border: none;}
.btn .list_text{-webkit-box-pack: center;}


/* pages/user/use_details/order/order_list/order_list.wxss */

.swiper-tab{
    width: 100%;
    border-bottom: 2rpx solid #ccc;
    text-align: center;
    height: 80rpx;
    line-height: 80rpx;
    display: flex;
    flex-flow: row;
    justify-content: space-around;
}
.swiper-tab-item{width: 30%;color:#434343;}
.active{color:#00ab84;border-bottom: 4rpx solid #00ab84;}
.swiper{text-align: center;}
.swiper-item{background-color: #f1f1f1;}

/* 已支付 */
.list{ padding:10px; height: 175px; overflow: hidden;
  background-color: #fff; margin: 10px 0px;font-size: 0.9rem;}
.list .v-1{border-bottom: 1px solid #f3f3f3; height: 25px; color: #676767;font-size: 0.8rem;}
.list .o-n{float: left;}
.list .red{color: red;font-weight: bold;float: right}
.list .clear{clear: both;}
.list .v-2{display: -webkit-box;display: -webkit-flex;display: flex;border-bottom: 1px solid #f3f3f3; padding: 10px 0px;}
.list .v-2-r{width: 80%; overflow: auto;}
.list .v-2 image{width: 50px; height: 50px; margin-right: 10px; }
.list .v-3{padding: 10px 0; text-align: right;}
.list .v-4{padding: 10px 0;text-align: right;}
.list  .v-4 text{width: 95px;font-size: 0.9rem;color: #fff; margin-left: 10px; padding:5px 10px; border-radius: 15px;}
.list .t-b{background-color: #01aa83;}
.list .t-d{background-color: #ed081c;}



/* 票务信息 */
.h20{width: 100%; height: 10px; background-color: #f1f1f1;}
.Tickets{ background-color: #fff;}
.Tickets .v-2{display: -webkit-box;display: -webkit-flex;display: flex; padding: 10px;}
.Tickets .v-2-r{width: 80%; overflow: auto;}
.Tickets .v-2-r view{margin-top: 2px;}
.Tickets .v-2-r0{font-size: 0.9rem;}
.Tickets .v-2-r1{font-size: 0.8rem;color: #8f8f94;}
.Tickets .v-2-r2{font-size: 0.8rem;color: red;}
.Tickets .v-2-e{width: 65px; text-align: center; font-size: 0.8rem;color: #8f8f94; }
.Tickets .v-2-e text{display: block;line-height: 18px;}
.Tickets .v-2e-btn{background-color: #3b9e82;color: #fff; }
.Tickets .v-img{display:flex; justify-content:center; align-items:center;}
.Tickets .v-2 image{width: 50px; height: 50px; margin-right: 10px; }




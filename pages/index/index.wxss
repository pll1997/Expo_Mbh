.main{
  width: 100vw; height: 100vh; overflow: hidden;
	background-size: 100% 100%;
	display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  box-orient:vertical;
  -webkit-flex-flow: column;
  flex-flow: column;
  background: linear-gradient(to top, #0c164b,#4351aa);
}

.roate03{width: 90%; margin: 5% auto;}
.roate03 view { color: #76d3e5; text-align: center; margin: 10rpx;  }
.roate03 view:first-child{ font-size: 32rpx; font-weight: bold;white-space:nowrap;}
.roate03 .e_sp{font-size: 27rpx; font-weight: normal;}
.roate03 view:last-child{font-size: 27rpx; }

.main .ul{
  width: 80%; height: 100px; margin: 0 auto;
  overflow: hidden;
	-webkit-box-flex: 1;-webkit-flex: 1;flex: 1;
	display: flex;justify-content: space-between;flex-wrap: wrap;}
.main .ul .li{width: 26%;height: auto;list-style: none;display: flex;align-items: center;justify-content: center; text-align: center;}


.main .ul .li image{width: 100%; height: 70rpx;}

.roate04{width: 100%; height: 200rpx;}
.roate04 image{width: 100%;height: 100%;}

.hide{display: none;}
.show{display: block;}







